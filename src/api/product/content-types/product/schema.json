{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "name": "product"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "category": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product-category.product-category",
      "inversedBy": "products"
    },
    "pictures": {
      "type": "media",
      "multiple": true,
      "required": false
    },
    "sm_pictures": {
      "type": "media",
      "multiple": true,
      "required": false
    },
    "short_desc": {
      "type": "text"
    },
    "price": {
      "type": "decimal"
    },
    "sale_price": {
      "type": "decimal"
    },
    "vendor": {
      "type": "string"
    },
    "brands": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::brand.brand",
      "inversedBy": "products"
    },
    "review": {
      "type": "integer",
      "default": 0
    },
    "ratings": {
      "type": "integer",
      "default": 0,
      "max": 5
    },
    "until": {
      "type": "date"
    },
    "stock": {
      "type": "integer"
    },
    "top": {
      "type": "boolean"
    },
    "featured": {
      "type": "boolean"
    },
    "new": {
      "type": "boolean"
    },
    "variants": {
      "type": "component",
      "repeatable": true,
      "component": "variants.variants"
    },
    "author": {
      "type": "string"
    },
    "sold": {
      "type": "integer"
    }
  }
}
